{
  "name": "suivis-de-depense",
  "version": "1.0.0",
  "description": "Application de suivi des dépenses développée avec Electron",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "NODE_ENV=development electron .",
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "dist": "npm run build",
    "publish": "electron-builder --publish=always"
  },
  "keywords": ["electron", "expenses", "budget", "finance", "desktop"],
  "author": "Votre Nom",
  "license": "ISC",
  "devDependencies": {
    "electron": "^38.1.2",
    "electron-builder": "^26.0.12"
  },
  "build": {
    "publish": [
      {
        "provider": "github",
        "owner": "votre-username",
        "repo": "app"
      }
    ],
    "appId": "com.tonapp.suivis-de-depense",
    "productName": "Suivi des Dépenses",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!node_modules/**/*",
      "!dist/**/*",
      "!.git/**/*",
      "!.env"
    ],
    "win": {
      "target": "portable",
      "forceCodeSigning": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    }
  }
}
